<HomeScreenView>
    md_bg_color: [230/255, 225/255, 219/255,   1]

    # Title 
    MDFloatLayout:
        size_hint: 1, 0.2
        pos_hint: {'center_x': 0.5,'top': 1 }
        MDLabel:
            pos_hint: {'center_x': 0.5,'top': 0.9 }
            size_hint: 0.5, 0.5
            text: "[b]Cat[/b] Bed"
            color: [203/255,  95/255,  65/255,   1]
            font_style: 'H3'
            markup: True
            halign: 'center' 
            valign: 'bottom'
    
    # Logo 
    MDFloatLayout:
        size_hint: 0.7, 0.3
        pos_hint: {'center_x': 0.5,'top': 0.9 }
        AsyncImage:
            pos_hint: {'center_x': 0.55,'top': 1 }
            size_hint: None, None
            size: self.texture_size
            source: root.model.logo
            allow_stretch: True