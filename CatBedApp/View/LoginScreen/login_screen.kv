#
# Card de Login 
<LoginCard@MDCard>:
    md_bg_color: [230/255, 225/255, 219/255,   1]
    size_hint: 0, 0 
    pos_hint: {'center_x': 0.50, 'center_y': 0.50 }
    orientation: 'vertical' 
    elevation: 2
    MDBoxLayout:
        size_hint: 1, 0.2 
        padding: [ 25, 0, 25, 0]
        orientation: 'horizontal'
        MDLabel: 
            size_hint_x: 0.9
            text: 'Login'
            color:  [203/255,  95/255,  65/255,   1]
            font_size: 16
        MDIconButton:
            size_hint_x: 0.1
            icon: 'close'
            pos_hint: {'right': 1, 'center_y': .5 }
            theme_text_color: 'Custom'
            text_color: 203/255,  95/255,  65/255,   1
            on_release: root.parent.controller.close_login()
    MDBoxLayout:
        orientation: 'vertical'
        size_hint: 0.9, 0.8 
        pos_hint: {'center_x': .5 }
        MDTextField:
            id: user 
            hint_text: 'Usu치rio:'
            pos_hint: {'center_x': .5 }
            max_text_length: 32
            hint_text: 'Usu치rio'
            icon_left: 'account-circle'
            icon_left_color_focus:  203/255,  95/255,  65/255,   1
            line_color_focus: 203/255,  95/255,  65/255,   1
            text_color_focus:  203/255,  95/255,  65/255,   1
            hint_text_color_focus:  203/255,  95/255,  65/255,   1
            mode: "rectangle"  
        MDBoxLayout:
            orientation: 'horizontal'
            pos_hint: {'center_x': .5 }
            MDTextField:
                id: password
                hint_text: 'Senha'
                password: True 
                mode: "rectangle"
                helper_text: 'Nunca compartilhe sua senha.'
                pos_hint: {'center_x': .5 }
                icon_left: 'key-variant'
                icon_left_color_focus:  203/255,  95/255,  65/255,   1
                line_color_focus: 203/255,  95/255,  65/255,   1
                text_color_focus:  203/255,  95/255,  65/255,   1
                hint_text_color_focus:  203/255,  95/255,  65/255,   1
            MDIconButton:
                icon: "eye-off"
                pos_hint: {"right": .95}
                theme_icon_color: 'Custom'
                icon_color:  203/255,  95/255,  65/255,   1
                on_release:
                    self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                    password.password = False if password.password is True else True
        MDLabel:
